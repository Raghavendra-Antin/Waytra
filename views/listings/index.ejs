<% layout("/layouts/boilerplates") %>
<body>
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      justify-content: flex-start;
      align-items: center;
      gap: 1rem;
      padding: 1rem 0;
    }
    .filter {
      text-align: center;
      opacity: 0.8;
      min-width: 80px;
      flex-shrink: 0;
      cursor: pointer;
      transition: all 0.2s ease;
      text-decoration: none;
      color: inherit;
      display: block;
    }
    .filter:hover {
      opacity: 1;
      transform: translateY(-2px);
      color: inherit;
      text-decoration: none;
    }
    .filter p {
      font-size: 0.8rem;
      margin: 0.5rem 0;
    }
    .tax-info {
      display: none;
    }
    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
      margin-top: 1.5rem;
    }

    /* Responsive filters */
    @media (max-width: 767px) {
      #filters {
        display: none !important;
      }

      .filter {
        margin-right: 1rem;
        margin-top: 1rem;
        min-width: 70px;
      }

      .tax-toggle {
        margin-left: 0;
        margin-top: 1rem;
        width: 100%;
        justify-content: center;
      }
    }

    /* Tablet and larger screens - allow wrapping */
    @media (min-width: 768px) {
      #filters {
        flex-wrap: wrap;
        justify-content: flex-start;
      }

      .filter {
        flex: 0 0 auto;
        margin-bottom: 0.5rem;
      }
    }
  </style>

  <!-- Desktop Categories (visible on md and up) -->
  <div id="filters" class="d-none d-md-flex">
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-brands fa-galactic-republic"></i></div>
      <p>Arctic</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Domes</p>
    </a>
    <a href="/listings/working" class="filter">
      <div><i class="fa-solid fa-gamepad"></i></div>
      <p>Play</p>
    </a>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Default total after Taxes</label
        >
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1 mt-3">
    <% for(let listing of allListing){ %>
    <a href="/listings/<%=listing._id%>" class="listing-link">
      <div class="card col listing-card">
        <img
          class="card-img-top"
          src="<%=listing.image.url %>"
          alt="listing image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#8377;<%=listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-info">&nbsp;&nbsp;+18%GST</i>
          </p>
        </div>
      </div>
      <% } %>
    </a>
  </div>
</body>
<script>
  let taxToggle = document.getElementById("flexSwitchCheckDefault");
  taxToggle.addEventListener("change", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
