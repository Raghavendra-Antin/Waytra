<style>
  .btn-search {
    background-color: #ff385c;
    color: white;
    font-weight: 500;
    border-radius: 999px;
    padding: 0.4rem 1rem;
  }

  .btn-search:hover {
    background-color: #e03150;
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
    border-radius: 35px;
  }

  /* Mobile filter items styling */
  .mobile-filter-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0.75rem 0.5rem;
    background-color: #f8f9fa;
    border-radius: 0.5rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid #e9ecef;
    text-decoration: none;
    color: #495057;
  }

  .mobile-filter-item:hover {
    background-color: #e9ecef;
    transform: translateY(-1px);
    color: #fe424d;
  }

  .mobile-filter-item i {
    font-size: 1.2rem;
    color: #fe424d;
    margin-bottom: 0.25rem;
  }

  .mobile-filter-item span {
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Mobile user actions styling */
  .mobile-user-actions {
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 1rem;
  }

  .mobile-user-actions .nav-link {
    padding: 0.5rem 0;
    border-bottom: 1px solid #f0f0f0;
  }

  .mobile-user-actions .nav-link:last-child {
    border-bottom: none;
  }

  /* Responsive search bar */
  @media (max-width: 767px) {
    .navbar-nav.ms-auto form {
      min-width: 200px !important;
      margin: 0.5rem 0;
    }
  }

  /* Right-to-left slide animation */
  @media (max-width: 767px) {
    .navbar-collapse {
      position: fixed;
      top: 0;
      right: -100%;
      width: 80%;
      height: 100vh;
      background-color: white;
      z-index: 1050;
      transition: right 0.3s ease-in-out;
      box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
      padding: 2rem 1rem;
      overflow-y: auto;
    }

    .navbar-collapse.show {
      right: 0;
    }

    .navbar-collapse::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: -1;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .navbar-collapse.show::before {
      opacity: 1;
    }

    .navbar-toggler {
      z-index: 1051;
    }
  }
</style>

